NODE_ENV=production
PORT=3000

# IPFS local
IPFS_HOST=127.0.0.1
IPFS_PORT=5001
IPFS_PROTOCOL=http

# 인증(백엔드에서 검사)
API_TOKEN=change-me-very-strong-token

# Rate limit
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# 최대 파일(스트리밍이지만 상한 체크)
MAX_FILE_BYTES=104857600  # 100MB 예시

# 키 관리
KEY_MODE=KMS    # KMS | LOCAL
MASTER_KEY_HEX=                         # KEY_MODE=LOCAL일 때 64-hex(32바이트)
AWS_REGION=ap-northeast-2
KMS_KEY_ID=arn:aws:kms:ap-northeast-2:<ACCOUNT_ID>:key/<KEY_ID>